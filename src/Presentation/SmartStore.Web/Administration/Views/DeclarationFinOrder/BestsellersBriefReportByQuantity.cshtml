@model IList<BestsellersReportLineModel>

<div class="card shadow-sm mb-4">
	<h6 class="card-header font-weight-medium border-bottom-0">
		<i class="fa fa-star pr-2"></i>
		@T("今日报单产品销售量")
	</h6>

	<div class="table-responsive">
		<table class="table table-striped m-0">
			<thead>
				<tr>
					<th>@T("产品名称")</th>
					<th>@T("总销量")</th>
					<th>@T("总金额")</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var x in Model)
				{
					<tr>
						<td>
							@Html.LabeledProductName(x.ProductId, x.ProductName, x.ProductTypeName, x.ProductTypeLabelHint)
						</td>
						<td>@x.TotalQuantity</td>
						<td>@x.TotalAmount</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
