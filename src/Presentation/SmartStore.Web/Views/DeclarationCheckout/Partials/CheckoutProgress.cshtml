@model CheckoutProgressModel
@using SmartStore.Web.Models.Checkout;

@{
    var progresses = new List<dynamic> {
        
		 // Confirm
        new {
            Step = dCheckoutProgressStep.Confirm,
            StepName = "confirm",
            Label =  T("Checkout.Progress.Confirm").Text,
            Visited = Model.dCheckoutProgressStep > dCheckoutProgressStep.Confirm,
            Active = Model.dCheckoutProgressStep == dCheckoutProgressStep.Confirm,
            Href = "javascript:void(0)"
        },
        new {
            Step = CheckoutProgressStep.Shipping,
            StepName = "shipping",
            Label =  T("地址").Text,
            Visited = Model.dCheckoutProgressStep > dCheckoutProgressStep.Shipping,
            Active = Model.dCheckoutProgressStep == dCheckoutProgressStep.Shipping,
            Href = "javascript:void(0)"
        },
        // Payment
        new {
            Step = dCheckoutProgressStep.Payment,
            StepName = "payment",
            Label =  T("Checkout.Progress.Payment").Text,
            Visited = Model.dCheckoutProgressStep > dCheckoutProgressStep.Payment,
            Active = Model.dCheckoutProgressStep == dCheckoutProgressStep.Payment,
            Href = "javascript:void(0)"
        },
       
        // Complete
        new {
            Step = dCheckoutProgressStep.Complete,
            StepName = "complete",
            Label =  T("Checkout.Progress.Complete").Text,
            Visited = Model.dCheckoutProgressStep > dCheckoutProgressStep.Complete,
            Active = Model.dCheckoutProgressStep == dCheckoutProgressStep.Complete,
            Href = "javascript:void(0)"
        }
    };
}

@{ Html.RenderWidget("checkout_steps_before"); }

<div class="costeps row no-gutters">
	@foreach (var p in progresses)
	{
		string stateClass = null;
		string href = p.Visited || p.Active ? p.Href : "javascript:void(0)";
		if (p.Visited)
		{
			stateClass = "visited";
		}
		else if (p.Active)
		{
			stateClass = "active";
		}
		else
		{
			stateClass = "inactive";
		}
		<div class="col-2 costep @stateClass" data-step="@p.StepName">
			<a class="costep-link" href="@href">
				<i class="costep-icon"></i>
				<span class="costep-label">@p.Label</span>
			</a>
		</div>
	}
</div>

@{ Html.RenderWidget("checkout_steps_after"); }
