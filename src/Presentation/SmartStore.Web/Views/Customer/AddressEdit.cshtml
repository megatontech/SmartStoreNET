@model CustomerAddressEditModel

@using SmartStore.Web.Models.Customer;

@{
	Html.AddTitleParts(T("PageTitle.Account").Text);

	Layout = "_dMyAccount";
	ViewBag.PageClassToken = "addresses";
	ViewBag.PageTitle = T("Account.CustomerAddresses.Edit").Text;
}

@using (Html.BeginForm())
{
	var dataDictAddress = new ViewDataDictionary();
	dataDictAddress["breakpoint"] = "lg";
	// Merge ModelState (required for validation)
	dataDictAddress.ModelState.Merge(ViewData.ModelState);
	dataDictAddress.TemplateInfo.HtmlFieldPrefix = "Address";
	Html.RenderPartial("_CreateOrUpdateAddress", Model.Address, dataDictAddress);

	<div class="form-group row">
		<div class="col">
			<button type="submit"  onclick="checkPhone()"  class="btn btn-primary btn-lg save-address-button"   style="
    width: 100%;
    background-color: #fd803d;
" >
				<i class="fa fa-check"></i>
				<span>@T("Common.Save")</span>
			</button>
		</div>
	</div>
}
<script>
    function checkPhone() {
        var phone = document.getElementById('Address_PhoneNumber').value;
        if (!(/^1(3|4|5|6|7|8|9)\d{9}$/.test(phone))) {
			alert("手机号码有误，请重填");
            //$("#Address_PhoneNumber").focus();
            return false;
        }

    }
    $("#Address_PhoneNumber").blur(function () { checkPhone(); });
</script>