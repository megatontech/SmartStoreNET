@{
    Layout = "_Layout";
    Html.AddBodyCssClass("myaccount-page");
}
<style>
    .shopbar-col-group-brand {
        display: none;
    }
</style>
<div class="page page-myaccount page-myaccount-@ViewBag.PageClassToken">
    <div class="page-body">
        <div class="row" style="background-color: #f7f4f4; margin-top: -30px;">
            <div class="col-md-4 col-lg-3 d-print-none" style="        display: inline-flex;color:#fff; -webkit-border-radius: 0em 0em 5.0em 5.0em; -moz-border-radius: 0em 0em 5.0em 5.0em; -o-border-radius: 0em 0em 5.0em 5.0em; -ms-border-radius: 0em 0em 5.0em 5.0em; border-radius: 0em 0em 4.0em 4.0em; background-color: rgb(224, 54, 54); ">
                <div class="mb-2" style="text-align:center">
                    @{
                        Model.Avatar.AvatarColor = "light";
                    }
                    <div class="@(Model.Avatar.Large ? "customer-avatar-lg" : "customer-avatar")">
                        @Avatar()
                    </div>

                    @helper Avatar()
                    {
                        var textColor = Model.Avatar.AvatarColor == "light" ? "text-muted" : "text-light";

                        if (!string.IsNullOrEmpty(Model.Avatar.PictureUrl))
                        {
                            <img src="@Model.Avatar.PictureUrl" title="@Model.Username" />
                        }
                        else
                        {
                            <span class="letter bg-@(Model.Avatar.AvatarColor) @(textColor)" title="@Model.Username">
                                <span>@Model.Avatar.AvatarLetter</span>
                            </span>
                        }
                    }
                </div>
                <fieldset class="content-group1" style="text-align:center;margin:2rem;">
                    <legend>@Model.Username <span><b>@Model.Title</b></span></legend>
                </fieldset>
                <div style="height:200px;"></div>
            </div>
            <div class="col-md-4 col-lg-3 d-print-none" style="margin:10px;margin-top:-50px;">
                <div class="cms-menu cms-menu-listgroup" data-menu-name="myaccount">
