@{
    Layout = "_Layout";
    Html.AddBodyCssClass("myaccount-page");
}
    
<div class="page page-myaccount page-myaccount-@ViewBag.PageClassToken">
	<div class="page-body">
        <div class="row">
            <div class="col-md-4 col-lg-3 d-print-none">
                <div class="mb-2" style="text-align:center">
                    @{
                            Model.Avatar.AvatarColor = "light";
                    }
                    <div class="@(Model.Avatar.Large ? "customer-avatar-lg" : "customer-avatar")">
                            @Avatar()
                    </div>

                    @helper Avatar()
                    {
                        var textColor = Model.Avatar.AvatarColor == "light" ? "text-muted" : "text-light";

                        if (!string.IsNullOrEmpty(Model.Avatar.PictureUrl))
                        {
                            <img src="@Model.Avatar.PictureUrl" title="@Model.Username" />
                        }
                        else
                        {
                            <span class="letter bg-@(Model.Avatar.AvatarColor) @(textColor)" title="@Model.Username">
                                <span>@Model.Avatar.AvatarLetter</span>
                            </span>
                        }
                    }
                </div>
                <fieldset class="content-group1" style="text-align:center">
                    <legend>@Model.Username <span>@Model.Title</span></legend>
                </fieldset>
            </div>
                <div class="col-md-4 col-lg-3 d-print-none">
                    @{ Html.RenderWidget("myaccount_menu_before"); }

                    @{ Html.SmartStore().Menu().Name("MyAccount").Template("ListGroup").Render(); }

                    @{ Html.RenderWidget("myaccount_menu_after"); }

                    @{ Html.RenderAction("PollBlock", "Poll", new { systemKeyword = "MyAccountMenu", area = "" }); }
                </div>
                <div class="col-md-8 col-lg-9">
                    <div class="page-title pt-4 pt-md-0">
                        <h1 class="h3">@ViewBag.PageTitle</h1>
                    </div>

                    @RenderBody()
                </div>
            </div>
        </div>
</div>

